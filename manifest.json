{
  "manifest_version": 2,
  "name": "ChatGPT Prompt",
  "description": "自定义预设 ChatGPT 提示语",
  "author": "Raz1ner",
  "version": "1.0.4",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "page": "setting.html",
    "open_in_tab": true
  },
  "background" : {
    "scripts": ["background.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://chat.openai.com/*",
    "storage"
  ]
}
